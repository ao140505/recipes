%header.navbar.navbar-fixed-top
  .navbar-inner
    .container
      .nav-collapse.collapse
        = render_navigation

      %ul(class="nav pull-right")
        %li(id="fat-menu" class="dropdown")
          %a(href="#" class="dropdown-toggle" data-toggle="dropdown")
            %span(class="user-icon" data-icon="U")
            %b(class="caret")
          %ul(class="dropdown-menu")
            - if current_user
              %li
                %p= current_user.email
              %li.divider
              %li
                = link_to "Log out", logout_path
            - else
              %li
                = link_to "Sign up", new_user_path
              %li.divider
              %li
                = link_to "Log in", login_path

      %a.btn.btn-navbar(data-toggle="collapse" data-target=".nav-collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      #login-search
        = form_tag search_recipes_path, :method => 'get', :class => 'navbar-search pull-right' do
          = text_field_tag :search, nil, 'placeholder' => 'Search Recipes', :class => 'search-query'
          = submit_tag "S", :name => nil, :id => 'search_submit'

