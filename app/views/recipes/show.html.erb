<p>
  <b>Author:</b>
  <%= @recipe.author %>
</p>

<% unless @recipe.source_url.empty?  %>
	<p>
	  <b>Source url:</b>
		<%= link_to @recipe.source_url, @recipe.source_url, :target => '_blank' %>
	</p>
<% end %>

<p>
  <b>Total time:</b>
  <%= @recipe.total_time %>
</p>

<p>
  <b>Yield:</b>
  <%= @recipe.yield %>
</p>

<p>
  <b>Ingredients:</b>
	<ul>
		<% @recipe.ingredients_array.each do |ingredient| %>
			<li><%= ingredient %></li>
		<% end %>
	</ul>
</p>

<p>
  <b>Directions:</b>
	<% @recipe.directions_array.each do |direction| %>
		<p><%= direction %></p>
	<% end %>
</p>


<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
