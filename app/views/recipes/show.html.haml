#recipe.span8
  .row
    .span7
      %h1.title
        =recipe.title
        %i.icon-chevron-right

      %ul.ingredients.unstyled
        - recipe.ingredients_array.each do |ingredient|
          %li= ingredient

      - recipe.directions_array.each do |direction|
        %p= direction

      = render partial: 'reviews_section'

    - if current_user
      .actions.span1
        - if recipe.favorite_for?(current_user)
          %a.remove_favorite.btn.disabled(href="#")
            %i.icon-bookmark
        -else
          = render partial: 'favorite_form'
        - if current_user.author?(recipe)
          = render partial: 'author_actions'

- content_for :sidebar do
  = render partial: 'recipe_sidebar'
