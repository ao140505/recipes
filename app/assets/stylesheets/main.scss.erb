$dark_gray: #363636;
$med_gray: #686868;
$light_gray: #EEE;

//global stuff
body {
  background: $med_gray url(<%= asset_path('noise.png') %>) repeat;
  font-family: Verdana, Helvetica, Arial;
  font-size: 14px;
  width: 75%;
  margin: 0 auto;
}

a {
  color: $dark_gray;
}

a img {
  border: none;
}

h1, h2 {
  color: $dark_gray;
}

//header styles
header {
  overflow: hidden;
  height: 70px;

  a, form {
    float: left;
  }

  a {
    padding-right: 15px;
    color: $dark_gray;
  }

  .logged-in {
    float: left;
    margin: 0;
    padding-right: 7px;
  }
}

#container {
  background: $light_gray url(<%= asset_path('noise.png') %>) repeat;
  padding: 20px 40px;
  box-shadow: #363636 0px 10px 55px;
}

#content {
	clear: both;
}

//footer styles
footer {
  margin-top: 50px;

  a {
    padding-right: 15px;
    color: $dark_gray;
  }
}

//flash stuff
#flash_notice, #flash_error, #flash_alert {
  padding: 5px 8px;
  margin: 10px 0;
}

#flash_notice {
  background-color: #CFC;
  border: solid 1px #6C6;
}

#flash_error, #flash_alert {
  background-color: #FCC;
  border: solid 1px #C66;
}

//error styles
.fieldWithErrors {
  display: inline;
}

.error_messages {
  width: 400px;
  border: 2px solid #CF0000;
  padding: 0px;
  padding-bottom: 12px;
  margin-bottom: 20px;
  background-color: #f0f0f0;
  font-size: 12px;
}

.error_messages h2 {
  text-align: left;
  font-weight: bold;
  padding: 5px 10px;
  font-size: 12px;
  margin: 0;
  background-color: #c00;
  color: #fff;
}

.error_messages p {
  margin: 8px 10px;
}

.error_messages ul {
  margin: 0;
}

//recipe page styles
.recipes-search .recipe-title, 
.recipes-index .recipe-title {
	display: block;
	font-size: 20px;
  font-weight: bold;
  color: $dark_gray;
}

.recipes-search .author,
.recipes-index .author {
	font-style: italic;
	margin: 2px 0;
}

.recipes-search .directions,
.recipes-index .directions {
	width: 550px;
} 

.field label {
	display: block;
}

form .field_with_errors input {
	background: #C00;
}

.recipes-show #recipe_info {
	float: right;
	width: 300px;
	margin: 8px 40px 0 0;
	padding-left: 30px;
  border-left: 1px solid #B3B3B3;
  box-shadow: inset #FFF 1px 0px 0px;
}

.recipes-show #recipe_info h2:first-child {
	margin-top: 0;
}

.recipes-show #main_content {
	width: 600px;
}
