$dark_gray: #363636;
$med_gray: #686868;
$light_gray: #EEE;

//recipe page styles
.recipes-search .recipe-title,
.recipes-index .recipe-title {
	display: block;
	font-size: 20px;
  font-weight: bold;
  color: $dark_gray;
}

.recipes-search .author,
.recipes-index .author {
	font-style: italic;
	margin: 2px 0;
}

.recipes-search .directions,
.recipes-index .directions {
	width: 550px;
}

.recipes-show #recipe_info {
	float: right;
	width: 300px;
	margin: 8px 40px 0 0;
	padding-left: 30px;
  border-left: 1px solid #B3B3B3;
  box-shadow: inset #FFF 1px 0px 0px;
}

.recipes-show #recipe_info h2:first-child {
	margin-top: 0;
}

.recipes-show #main_content {
	width: 600px;
}
